/**index.wxss**/
.banners {
  width: 100%;
  height: 200px;
}

.banner{
  position: relative;
}

.banner-image{
  width: 100%;
  height: 100%;
}

.banner-title{
  color: #FFF;
  position: absolute;
  width: 100%;
  height: 60rpx;
  bottom: 0px;
  font-size: 16px;
  line-height: 60rpx;
  left: 0;
  text-align: center;
  background-color: rgba(0,0,0,.5);
}

/* 礼品卡列表部分 */
.giftcard-group {
  background-color: #f2f2f2;
  width: 100%;
  padding-left: 8px;
  padding-right: 8px;
}

.giftcard-group-title{
  color: #76787e;
  height: 36px;
  line-height: 36px;
  padding: 0 16px;
  width: 100%;
  font-size: 14px;
  padding-left: 16px;
  padding-right: 16px;
}
.giftcard-item-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.giftcard-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-left: 8px;
  padding-top: 8px;
  padding-right: 8px;
  padding-bottom: 8px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
  width: 300rpx;
}

.giftcard-img-box{
  width: 80px;
  height: 80px;
}

.giftcard-img{
  width: 80px;
  height: 80px;
}

.giftcard-title{
  font-size: 16px;
}
